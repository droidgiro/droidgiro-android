<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="wrap_content"
	android:id="@+id/pairLayout" android:layout_gravity="center_horizontal"
	android:orientation="vertical">
	<!-- 
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/debugBypass"
		android:text="Debug bypass" android:layout_centerHorizontal="true"
		android:onClick="bypass"></Button>
	-->
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/pinLayout"
		android:layout_alignParentLeft="true" android:layout_centerVertical="true"
		android:gravity="center_horizontal" android:layout_marginTop="50dp">

		<EditText android:id="@+id/pairDigit1"
			android:layout_alignParentLeft="true" android:layout_height="wrap_content"
			android:layout_width="50dp" android:gravity="center_vertical|center_horizontal|center"
			android:inputType="phone" android:maxLength="1" android:textSize="30dp"></EditText>

		<EditText android:id="@+id/pairDigit2"
			android:layout_alignParentLeft="true" android:layout_height="wrap_content"
			android:layout_width="50dp" android:gravity="center_vertical|center_horizontal|center"
			android:inputType="phone" android:maxLength="1" android:textSize="30dp"></EditText>

		<EditText android:id="@+id/pairDigit3"
			android:layout_alignParentLeft="true" android:layout_height="wrap_content"
			android:layout_width="50dp" android:gravity="center_vertical|center_horizontal|center"
			android:inputType="phone" android:maxLength="1" android:textSize="30dp"></EditText>

		<EditText android:id="@+id/pairDigit4"
			android:layout_alignParentLeft="true" android:layout_height="wrap_content"
			android:layout_width="50dp" android:gravity="center_vertical|center_horizontal|center"
			android:inputType="phone" android:maxLength="1" android:textSize="30dp"></EditText>


	</LinearLayout>
	<TextView android:id="@+id/pairDescription"
		android:layout_height="wrap_content" android:layout_below="@+id/pinLayout"
		android:layout_centerHorizontal="true" android:text="@string/get_pin"
		android:layout_width="fill_parent" android:gravity="center_horizontal"></TextView>



	<TextView android:layout_below="@+id/pairDescription"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_centerHorizontal="true" android:id="@+id/pairHelp"
		android:text="@string/pair_help" android:layout_marginTop="35dp"></TextView>
	



</LinearLayout>
